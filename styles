/* Wrapper with perspective to create 3D effect */
.wrapper {
  height: 100vh;
  overflow-y: auto;
  overflow-x: hidden;
  perspective: 10px;
}

/* Header container with 3D transform style */
header {
  position: relative;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  transform-style: preserve-3d;
  overflow: hidden;
  margin-bottom: 2rem;
  z-index: 0;
  color: white;
  text-align: center;
  background-color: black; /* fallback bg color */
}

/* Background image layer */
.background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transform: translateZ(-10px) scale(2);
  z-index: -2;
  filter: brightness(0.7);
}

/* Foreground image layer */
.foreground {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transform: translateZ(-5px) scale(1.5);
  z-index: -1;
  filter: brightness(0.9);
}

/* Large centered title */
.title {
  font-size: 6rem;
  text-shadow: 0 0 10px black;
  z-index: 1;
  position: relative;
  max-width: 90%;
  margin: 0 auto;
}

/* Make sure nav and content appear above the header layers */
nav,
.bgimg,
.content-section,
.contact-section {
  position: relative;
  z-index: 1;
}

